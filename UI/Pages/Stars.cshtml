@page
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Test Estrellas</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        .half-star-rating {
            direction: rtl;
            display: flex;
            gap: 0;
            user-select: none;
        }

        .half-star-rating input[type="radio"] {
            display: none;
        }

        .half-star-rating label {
            width: 14px;
            height: 28px;
            overflow: hidden;
            position: relative;
            cursor: pointer;
            display: inline-block;
        }

        .half-star-rating label i {
            font-size: 28px;
            color: #ccc;
            position: absolute;
            top: 0;
            left: -7px;
            pointer-events: none;
        }

        .half-star-rating label[data-half="left"] {
            clip-path: inset(0 14px 0 0);
        }

        .half-star-rating label[data-half="right"] {
            clip-path: inset(0 0 0 14px);
        }

        .half-star-rating input:checked ~ label i {
            color: gold;
        }

        .half-star-rating label:hover i,
        .half-star-rating label:hover ~ label i {
            color: gold;
        }
    </style>
</head>
<body>
    <div class="half-star-rating">
        @for (int i = 10; i >= 1; i--)
        {
            var value = (i * 0.5).ToString(System.Globalization.CultureInfo.InvariantCulture);
            var id = $"star_{value.Replace(".", "_")}";
            var half = (i % 2 == 0) ? "left" : "right";
            <input type="radio" id="@id" name="rating" value="@value" />
            <label for="@id" class="star-half" data-half="@half" title="@value">
                <i class="bi bi-star-fill"></i>
            </label>
        }
    </div>
</body>
</html>
