@page
@model ListCreatorModel

@{
    ViewData["Title"] = "New List";
}

<!-- ✅ Mensajes en esquina superior derecha -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 1100;">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="toast align-items-center text-white bg-success border-0 fade show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">@TempData["SuccessMessage"]</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="toast align-items-center text-white bg-danger border-0 fade show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">@TempData["ErrorMessage"]</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    }
</div>


<div class="container mt-5 p-4 rounded bg-dark text-light shadow" style="max-width: 900px;">
    <h2 class="mb-4">New List</h2>

    <!-- 🔍 FORMULARIO DE BÚSQUEDA -->
    <form method="post" asp-page-handler="Search" class="mb-4 d-flex align-items-center">
        <input asp-for="GameSearchQuery" name="GameSearchQuery"
               class="form-control bg-dark text-light border-secondary me-2"
               placeholder="Enter name of game..." style="max-width: 300px;" />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>

    <!-- 🎮 Resultados de búsqueda -->
    @if (Model.SearchResults != null && Model.SearchResults.Any())
    {
        <div class="mb-4">
            <h5>Results:</h5>
            <div class="d-flex flex-wrap gap-3">
                @foreach (var game in Model.SearchResults)
                {
                    <form method="post" asp-page-handler="AddGame" style="display:inline;">
                        <input type="hidden" name="gameId" value="@game.Id" />
                        <button type="submit" style="all: unset; cursor: pointer;">
                            <div class="card bg-dark text-light border-secondary" style="width: 12rem;">
                                <img src="@game.HeaderUrl" class="card-img-top" alt="@game.Title" />
                                <div class="card-body">
                                    <h6 class="card-title">@game.Title</h6>
                                    <small>Click to add</small>
                                </div>
                            </div>
                        </button>
                    </form>
                }
            </div>
        </div>
    }

    <!-- ✅ FORMULARIO PRINCIPAL -->
    <form method="post" asp-page-handler="Create">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input asp-for="ListName" class="form-control bg-dark text-light border-secondary" />
        </div>

        <div class="mb-3">
            <label class="form-label">Tags</label>
            <input asp-for="Tags" class="form-control bg-dark text-light border-secondary" placeholder="eg. top 10" />
        </div>

        <div class="mb-3">
            <label class="form-label">Who can view</label>
            <select asp-for="Visibility" class="form-select bg-dark text-light border-secondary">
                <option value="private">You (private list)</option>
                <option value="public">Everyone (public list)</option>
            </select>
        </div>

        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" asp-for="Ranked" id="rankedCheck" />
            <label class="form-check-label" for="rankedCheck">
                Ranked list <small class="text-muted">Show position for each game.</small>
            </label>
        </div>

        <div class="mb-4">
            <label class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control bg-dark text-light border-secondary" rows="5"></textarea>
        </div>

        <!-- 🧩 Juegos seleccionados -->
        @if (Model.SelectedGames != null && Model.SelectedGames.Any())
        {
            <div class="mb-4">
                <h5>Selected Games:</h5>
                <div class="d-flex flex-wrap gap-2">
                    @foreach (var game in Model.SelectedGames)
                    {
                        <div style="width: 80px; height: 120px; overflow: hidden; border-radius: 6px; border: 1px solid #999;">
                            <img src="@game.HeaderUrl" alt="@game.Title" style="width: 100%; height: 100%; object-fit: cover;" />
                        </div>
                    }
                </div>
            </div>
        }

        <div class="d-flex justify-content-end gap-2">
            <button type="submit" class="btn btn-success">Save</button>
            <a asp-page="/Index" class="btn btn-outline-light">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            const toastElList = [].slice.call(document.querySelectorAll('.toast'))
            toastElList.forEach(function (toastEl) {
                new bootstrap.Toast(toastEl, { delay: 3000 }).show()
            })
        });
    </script>
}

