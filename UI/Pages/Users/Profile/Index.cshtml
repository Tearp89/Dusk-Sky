@page "/Users/Profile/{userId?}"
@model ProfileModel
@{
    ViewData["Title"] = $"{Model.ProfileHeader.Username}'s Profile";
}

@section FullWidthHeader {
    <partial name="_ProfileHeader" model="Model" />
    <partial name="_ProfileNav" model="Model" />
}

<div class="container py-4">

    <h3 class="mb-4">Estadísticas Rápidas</h3>
    <div class="row row-cols-1 row-cols-md-3 g-3 mb-5">
        <div class="col">
            <div class="card h-100 text-center quick-stat-card">
                <div class="card-body">
                    <i class="bi bi-controller display-4 text-primary mb-2"></i>
                    <h4 class="fw-bold">@Model.QuickStats.CompletedGamesCount</h4>
                    <p class="text-muted mb-0">Juegos Completados</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 text-center quick-stat-card">
                <div class="card-body">
                    <i class="bi bi-pencil-square display-4 text-success mb-2"></i>
                    <h4 class="fw-bold">@Model.QuickStats.ReviewsCount</h4>
                    <p class="text-muted mb-0">Reseñas Escritas</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 text-center quick-stat-card">
                <div class="card-body">
                    <i class="bi bi-star-fill display-4 text-warning mb-2"></i>
                    <h4 class="fw-bold">@Model.QuickStats.AverageRating</h4>
                    <p class="text-muted mb-0">Rating Promedio</p>
                </div>
            </div>
        </div>
    </div>

    @if (Model.LatestActivity != null)
    {
        <h3 class="mb-4">Última Actividad</h3>
        <div class="card mb-5 featured-activity-card">
            <div class="row g-0">
                <div class="col-md-4">
                    @{
                        string activityGameId = ""; 
                        string activityImageSrc = "/images/default_list_icon.png"; 
                        string activityTitle = "Actividad General"; 
                        string linkPage = "/Games/Details"; 
                        string linkRouteId = ""; 

                        switch (Model.LatestActivity.Type)
                        {
                            case "Review":
                                var reviewAct = (ReviewActivityViewModel)Model.LatestActivity;
                                activityGameId = reviewAct.GameId;
                                activityImageSrc = reviewAct.GameImageUrl;
                                activityTitle = reviewAct.GameTitle;
                                linkRouteId = reviewAct.GameId;
                                linkPage = "/Games/Details";
                                break;
                            case "GameLog":
                                var gameLogAct = (GameLogActivityViewModel)Model.LatestActivity;
                                activityGameId = gameLogAct.GameId;
                                activityImageSrc = gameLogAct.GameImageUrl;
                                activityTitle = gameLogAct.GameTitle;
                                linkRouteId = gameLogAct.GameId;
                                linkPage = "/Games/Details";
                                break;
                            case "GameList":
                                var gameListAct = (GameListActivityViewModel)Model.LatestActivity;
                                activityImageSrc = "/images/default_list_icon.png"; 
                                activityTitle = gameListAct.ListName;
                                linkRouteId = gameListAct.ListId;
                                linkPage = "/Lists/Details";
                                break;
                            default:
                                break;
                        }
                    }
                    @if (Model.LatestActivity.Type == "Review" || Model.LatestActivity.Type == "GameLog")
                    {
                        <a asp-page="@linkPage" asp-route-gameId="@linkRouteId">
                            <img src="@activityImageSrc" class="img-fluid rounded-start featured-game-img" alt="Portada de @activityTitle">
                        </a>
                    }
                    else if (Model.LatestActivity.Type == "GameList")
                    {
                        <a asp-page="@linkPage" asp-route-listId="@linkRouteId">
                            <img src="@activityImageSrc" class="img-fluid rounded-start featured-game-img" alt="Portada de @activityTitle">
                        </a>
                    }
                    else
                    {
                        <img src="@activityImageSrc" class="img-fluid rounded-start featured-game-img" alt="Actividad">
                    }
                </div>
                <div class="col-md-8">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title mb-2">
                            @if (Model.LatestActivity.Type == "Review" || Model.LatestActivity.Type == "GameLog")
                            {
                                <a asp-page="@linkPage" asp-route-gameId="@linkRouteId" class="text-dark text-decoration-none">
                                    @activityTitle
                                </a>
                            }
                            else if (Model.LatestActivity.Type == "GameList")
                            {
                                <a asp-page="@linkPage" asp-route-listId="@linkRouteId" class="text-dark text-decoration-none">
                                    @activityTitle
                                </a>
                            }
                            else
                            {
                                @activityTitle
                            }
                        </h5>
                        <p class="card-text mb-2">
                            @{
                                var actionText = "";
                                switch (Model.LatestActivity.Type)
                                {
                                    case "Review":
                                        var reviewAct = (ReviewActivityViewModel)Model.LatestActivity;
                                        // La interpolación de C# está correcta aquí
                                        actionText = $"Escribió una reseña ({reviewAct.Rating}/5)";
                                        break;
                                    case "GameLog":
                                        var gameLogAct = (GameLogActivityViewModel)Model.LatestActivity;
                                        // ¡CAMBIO AQUÍ! Eliminar el '@' antes de gameLogAct.Status
                                        actionText = $"Marcó como: <span class='badge bg-primary me-1'>{gameLogAct.Status}</span>";
                                        break;
                                    case "GameList":
                                        var gameListAct = (GameListActivityViewModel)Model.LatestActivity;
                                        // Ya corregido en una respuesta anterior
                                        actionText = $"Creó la lista: <strong><a asp-page='/Lists/Details' asp-route-listId='{gameListAct.ListId}' class='text-decoration-none text-primary'>{gameListAct.ListName}</a></strong>";
                                        break;
                                    default:
                                        actionText = "Realizó una actividad";
                                        break;
                                }
                            }
                            @Html.Raw(actionText)
                        </p>
                        <p class="card-text mt-auto"><small class="text-muted">Hace @((DateTime.UtcNow - Model.LatestActivity.Timestamp).Days) días</small></p>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (Model.RecentLikedGames.Any())
    {
        <h3 class="mb-4">Juegos Favoritos Recientes</h3>
        <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-6 g-3 mb-5">
            @foreach (var game in Model.RecentLikedGames)
            {
                <div class="col">
                    <div class="card h-100 game-liked-card">
                        <a asp-page="/Games/GameDetails" asp-route-gameId="@game.Id" class="text-decoration-none">
                            <img src="@game.HeaderUrl" class="card-img-top game-liked-img" alt="Portada de @game.Title">
                            <div class="card-body p-2">
                                <p class="card-title text-center text-dark fw-bold mb-0 text-truncate">@game.Title</p>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mb-5">
            <a asp-page="/Users/Profile/Likes" asp-route-userId="@Model.ProfileHeader.UserId" class="btn btn-outline-secondary">Ver todos los favoritos <i class="bi bi-arrow-right"></i></a>
        </div>
    }

    @if (Model.Friends.Any())
    {
        <h3 class="mb-4">Amigos de @Model.ProfileHeader.Username</h3>
        <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-3">
            @foreach(var friend in Model.Friends)
            {
                <div class="col">
                    <a asp-page="/Users/Profile/Index" asp-route-userId="@friend.UserId" class="text-decoration-none">
                        <div class="card h-100 text-center friend-card">
                            <div class="card-body d-flex flex-column justify-content-center">
                                <img src="@friend.AvatarUrl" alt="Avatar de @friend.Username" class="rounded-circle mb-2 mx-auto" width="80" height="80" style="object-fit: cover;" />
                                <h6 class="card-title mb-0 text-dark fw-bold">@friend.Username</h6>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center p-5 border rounded bg-light">
            @if(Model.IsOwnProfile)
            {
                <p class="text-muted">Aún no has añadido amigos. ¡Usa la barra de búsqueda para encontrar gente!</p>
            }
            else
            {
                <p class="text-muted">@Model.ProfileHeader.Username aún no ha añadido amigos.</p>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}


