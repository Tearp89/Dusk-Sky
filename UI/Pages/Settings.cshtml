@page "/Account/Settings"
@model SettingsModel
@{
    ViewData["Title"] = "Account Settings";
    ViewData["ShowBackground"] = false; // Puedes mantener tu fondo o desactivarlo
}

<div class="container py-4" style="margin-top: 50px; max-width: 800px;">
    <div class="card p-4 shadow-sm rounded-4 bg-light">
        <h2 class="mb-4 text-center fw-bold">Account Settings</h2>

        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            var alertClass = Model.StatusMessage.StartsWith("Error") ? "alert-danger" : "alert-success";
            <div class="alert @alertClass alert-dismissible fade show" role="alert">
                @Model.StatusMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <h4 class="mt-4 mb-3">Change Password</h4>
        <form method="post" asp-page-handler="ChangePassword">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label asp-for="ChangePasswordInput.OldPassword" class="form-label"></label>
                <input asp-for="ChangePasswordInput.OldPassword" class="form-control" />
                <span asp-validation-for="ChangePasswordInput.OldPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ChangePasswordInput.NewPassword" class="form-label"></label>
                <input asp-for="ChangePasswordInput.NewPassword" class="form-control" />
                <span asp-validation-for="ChangePasswordInput.NewPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ChangePasswordInput.ConfirmPassword" class="form-label"></label>
                <input asp-for="ChangePasswordInput.ConfirmPassword" class="form-control" />
                <span asp-validation-for="ChangePasswordInput.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="text-end">
                <button type="submit" class="btn btn-primary button-glass">Update Password</button>
            </div>
        </form>

        <hr class="my-5" />

        <h4 class="text-danger mt-4 mb-3">Delete Account</h4>
        <p class="text-muted">Deleting your account is a permanent action that cannot be undone. All your data will be removed from our system.</p>
        
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
            Delete Account
        </button>

        <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Account Deletion</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you absolutely sure you want to delete your account? This action is permanent and cannot be undone.</p>
                        <form method="post" asp-page-handler="DeleteAccount">
                            @Html.AntiForgeryToken()
                            <div class="form-check mb-3">
                                <input asp-for="DeleteAccountInput.ConfirmDeletion" class="form-check-input" type="checkbox" id="confirmDeletionCheck">
                                <label class="form-check-label" for="confirmDeletionCheck">
                                    I understand and confirm that I want to delete my account.
                                </label>
                                <span asp-validation-for="DeleteAccountInput.ConfirmDeletion" class="text-danger d-block mt-1"></span>
                            </div>
                            <div class="text-end">
                                <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-danger" id="finalDeleteBtn" disabled>Delete My Account</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const confirmCheck = document.getElementById('confirmDeletionCheck');
            const deleteBtn = document.getElementById('finalDeleteBtn');

            if (confirmCheck && deleteBtn) {
                confirmCheck.addEventListener('change', function () {
                    // Habilita el botón de borrado SOLO SI el checkbox está marcado.
                    deleteBtn.disabled = !this.checked;
                });
            }
        });
    </script>

}