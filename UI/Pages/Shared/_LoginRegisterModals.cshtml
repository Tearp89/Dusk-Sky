<div class="modal fade" id="createAccountModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="createAccountLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content custom-modal">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="createAccountLabel">Registrarse</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-page="/Startpage" asp-page-handler="Register">
                    <div class="mb-3">
                        <label for="RegisterData_Email" class="form-label">Correo electrónico</label>
                        <input name="RegisterData.Email" id="RegisterData_Email" class="form-control input-glass" type="email" />
                        <div class="text-danger">@ViewData.ModelState["RegisterData.Email"]?.Errors.FirstOrDefault()?.ErrorMessage</div>
                    </div>
                    <div class="mb-3">
                        <label for="RegisterData_Username" class="form-label">Nombre de usuario</label>
                        <input name="RegisterData.Username" id="RegisterData_Username" class="form-control input-glass" />
                        <div class="text-danger">@ViewData.ModelState["RegisterData.Username"]?.Errors.FirstOrDefault()?.ErrorMessage</div>
                    </div>
                    <div class="mb-3">
                        <label for="RegisterData_Password" class="form-label">Contraseña</label>
                        <input name="RegisterData.Password" id="RegisterData_Password" class="form-control input-glass" type="password" />
                        <div class="text-danger">@ViewData.ModelState["RegisterData.Password"]?.Errors.FirstOrDefault()?.ErrorMessage</div>
                    </div>
                    <div class="mb-3">
                        <label for="RegisterData_ConfirmPassword" class="form-label">Confirmar contraseña</label>
                        <input name="RegisterData.ConfirmPassword" id="RegisterData_ConfirmPassword" class="form-control input-glass" type="password" />
                        <div class="text-danger">@ViewData.ModelState["RegisterData.ConfirmPassword"]?.Errors.FirstOrDefault()?.ErrorMessage</div>
                    </div>
                    
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary button-glass-blue">Registrarse</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="signInModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="signInLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content custom-modal">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="signInLabel">Iniciar Sesión</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-page="/Startpage" asp-page-handler="Login">
                    <div class="mb-3">
                        <label for="LoginData_Username" class="form-label">Nombre de usuario</label>
                        <input name="LoginData.Username" id="LoginData_Username" class="form-control input-glass" type="text" />
                        <div class="text-danger">@ViewData.ModelState["LoginData.Username"]?.Errors.FirstOrDefault()?.ErrorMessage</div>
                    </div>
                    <div class="mb-3">
                        <label for="LoginData_Password" class="form-label">Contraseña</label>
                        <input name="LoginData.Password" id="LoginData_Password" class="form-control input-glass" type="password" />
                        <div class="text-danger">@ViewData.ModelState["LoginData.Password"]?.Errors.FirstOrDefault()?.ErrorMessage</div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary button-glass-blue">Iniciar Sesión</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>