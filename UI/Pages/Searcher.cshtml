@page 
@model SearcherModel
@{
    ViewData["Title"] = "Search"; // Esto asegura que no se use el layout predeterminado
    
}
<div class="container mt-4">
    <div class="row">
        <!-- Columna principal: resultados -->
        <div class="col-lg-9">
            <h2 class="mb-4">Resultados para “@Model</h2>

            @foreach (var game in Model.Games)
            {
                <div class="row mb-4 p-3 rounded shadow-sm border bg-white">
                    <div class="col-md-2">
                        <img src="@game.HeaderUrl" class="img-fluid rounded" alt="@game.Title">
                    </div>
                    <div class="col-md-10">
                        <h4 class="mb-2">@game.Title <small class="text-muted">(@game.Title)</small></h4>
                        <p class="mb-1">
                            <strong>Títulos alternativos:</strong> @game.Title
                        </p>
                        <p class="mb-0"><strong>Dirigido por:</strong>
                            @foreach (var director in game.Title)
                            {
                                <span class="badge bg-secondary me-1">@director</span>
                            }
                        </p>
                    </div>
                </div>
            }
        </div>

        <!-- Columna secundaria: filtros -->
        <div class="col-lg-3">
            <h5 class="mb-3">Mostrar resultados por</h5>
            <ul class="list-group">
                <li class="list-group-item">Todos</li>
                <li class="list-group-item">Juegos</li>
                <li class="list-group-item">Reseñas</li>
                <li class="list-group-item">Listas</li>
                <li class="list-group-item">Usuarios</li>
                <li class="list-group-item">Desarrolladores</li>
                <li class="list-group-item">Plataformas</li>
                <li class="list-group-item">Géneros</li>
            </ul>
        </div>
    </div>
</div>